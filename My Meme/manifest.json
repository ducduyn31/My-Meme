{

  "manifest_version": 2,
  "name": "My Meme",
  "version": "1.0",

  "description": "Generate memes with custom text.",
  
  "icons": {
    "48": "icons/icon-48.png",
	"96": "icons/icon-96.png"
  },
  
  "browser_action":{
	"default_icon": "icons/icon-32.png",
	"default_title": "My Meme",
	"default_popup": "popup/mymeme_pop.html"
  },
  
  "permissions": [
	"activeTab", "tabs"
	],
	
  "background": {
	"scripts": ["mymeme.js"]
  },
  
  "web_accessible_resources":[
		"assets/*"
  ]
}